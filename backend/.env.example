# FastAPI Backend Configuration

# Server settings
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Model settings
MODEL_NAME=distilbert-base-uncased-finetuned-sst-2-english
MAX_TEXT_LENGTH=500
MODEL_CACHE_DIR=./models

# CORS settings (comma-separated origins)
CORS_ORIGINS=http://localhost:8080,https://yourdomain.com

# Logging
LOG_LEVEL=INFO

# Performance
USE_GPU=false
BATCH_SIZE=1